{
  "editor.tabSize": 2,
  "editor.codeActionsOnSave": {
    "source.organizeImports": true
  },
  "editor.formatOnSave": true,
  "eslint.validate": ["javascript"],
  "files.exclude": {
    "**/.git": true,
    "**/*lock*": true,
    "**/*bin*": true,
    "**/*coverage*": true
  },
  "[typescript]": {
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    }
  }
}
