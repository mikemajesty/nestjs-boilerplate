{
  "name": "boilerplate-nest",
  "version": "0.0.6",
  "description": "NestJs boilerplate",
  "author": {
    "name": "Mike Lima",
    "email": "mike.rodrigues.lima@gmail.com.br"
  },
  "homepage": "https://github.com/mikemajesty/nestjs-boilerplate#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/mikemajesty/nestjs-boilerplat.git"
  },
  "private": false,
  "license": "MIT",
  "engines": {
    "node": ">=14 <=15"
  },
  "scripts": {
    "prebuild": "rimraf bin",
    "build": "nest build",
    "prepare": "husky install",
    "format": "prettier --write \"src/**/*.ts\"",
    "start:dev": "docker-compose -f docker-compose-local.yml up --build",
    "docker:dev": "nest start --debug 0.0.0.0:5870 --watch",
    "docker:prd": "node ./src/main.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage && xdg-open ./coverage/lcov-report/index.html",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./jest-e2e.json",
    "commit": "git-cz",
    "tag:production": "changelog generate && cd devops && bash ./tag-create.sh && cd ..",
    "migration:create": "./node_modules/typeorm/cli.js migration:create --dir=./src/migration"
  },
  "dependencies": {
    "@nestjs/common": "^8.0.0",
    "@nestjs/config": "^1.0.2",
    "@nestjs/core": "^8.0.0",
    "@nestjs/platform-express": "^8.0.0",
    "@nestjs/swagger": "^5.1.4",
    "@nestjs/typeorm": "^8.0.2",
    "axios": "^0.22.0",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "moment": "^2.29.1",
    "mysql2": "^2.3.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.4.0",
    "swagger-ui-express": "^4.1.6",
    "typeorm": "^0.2.38",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.2.1",
    "@commitlint/config-conventional": "^13.2.0",
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "^7.0.2",
    "jest": "^27.0.6",
    "nock": "^13.1.3",
    "prettier": "^2.3.2",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  },
  "jest": {
    "collectCoverage": true,
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coveragePathIgnorePatterns": [
      "./src/main.ts",
      "./src/modules/app.module.ts",
      "./src/interceptors/*",
      "./src/migration/*"
    ],
    "setupFilesAfterEnv": [
      "../src/jest/init.ts"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "functions": 90,
        "statements": 90,
        "branches": 90,
        "lines": 90
      }
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}